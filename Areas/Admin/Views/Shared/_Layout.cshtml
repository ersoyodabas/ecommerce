@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .sidebar .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">ECOMMERCE</a>
            <div class="d-flex align-items-center">
                <span class="text-light me-3">Kullanıcı Adı</span>
                <a href="/Account/Logout" class="btn btn-outline-light">Çıkış</a>
            </div>
        </div>
    </nav>

    <div class="d-flex">
        <!-- Sidebar -->
        <div class="bg-dark text-white p-3 vh-100 sidebar" style="width: 250px;">
            <ul class="nav flex-column mt-4">
                <li class="nav-item"><a href="#" class="nav-link text-white">Ürünler</a></li>
                <li class="nav-item"><a href="#" class="nav-link text-white">Kullanıcılar</a></li>
                <li class="nav-item"><a href="#" class="nav-link text-white">Müşteriler</a></li>
                <li class="nav-item"><a href="#" class="nav-link text-white">Stok Giriş</a></li>
                <li class="nav-item"><a href="#" class="nav-link text-white">Stok Çıkış</a></li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="container-fluid p-4" style="flex: 1;">
            @RenderBody()
        </div>
    </div>

</body>
</html>
